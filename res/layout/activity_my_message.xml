<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res/com.example.shoes"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical" >
    
    <RelativeLayout
        android:layout_width="match_parent"
         android:layout_height="45dp">
        
        <ImageButton 
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="15dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingRight="20dp"
            android:src="@drawable/back_bg"
            android:background="@drawable/selector_btn_pressed_color_blue"
            android:layout_alignParentLeft="true"/>
        
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="个人信息"
            android:textSize="20sp"
            android:textColor="#ffffff"/>
        
    </RelativeLayout>
    
    <View 
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="#33ffffff"/>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:orientation="vertical">
        
        <LinearLayout
            android:id="@+id/btn_message_head_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:background="@drawable/selector_btn_pressed_color_blue"
            android:orientation="horizontal">
            
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="头像"
                android:textSize="16sp"
                android:textColor="#ffffff"/>
            
            <com.shoes.customview.RoundCornerImageView 
            	android:id="@+id/my_message_head_image"
                android:layout_width="80dp"
                android:layout_height="80dp"  
                android:layout_margin="10dp"             
                android:src="@drawable/head_image_default"
                custom:type="round"
                custom:cornerRadius="20dp"/>
            
        </LinearLayout>
        
        <View 
	        android:layout_width="match_parent"
	        android:layout_height="2px"
	        android:background="#33ffffff"/>
        
        <LinearLayout 
            android:id="@+id/btn_message_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:background="@drawable/selector_btn_pressed_color_blue"
            android:gravity="center_vertical">
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="昵称"
                android:textSize="16sp"
                android:textColor="#ffffff"/>
            
            <TextView
                android:id="@+id/tv_message_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
				android:layout_weight="1"
				android:gravity="right"
				android:layout_marginLeft="20dp"
				android:singleLine="true"
				android:paddingRight="10dp"
                android:text="用户"
                android:textColor="#ffffff"/>
            
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/right_arrow"/>
            
        </LinearLayout>
        
        <View 
	        android:layout_width="match_parent"
	        android:layout_height="2px"
	        android:background="#33ffffff"/>
        
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:background="@drawable/selector_btn_pressed_color_blue"
            android:gravity="center_vertical">
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="会员号"
                android:textSize="16sp"
                android:textColor="#ffffff"/>
            
            <TextView
                android:id="@+id/tv_message_user_id"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
				android:layout_weight="1"
				android:gravity="right"
				android:paddingRight="10dp"
                android:text="无"
                android:textColor="#ffffff"/>
            
        </LinearLayout>
        
        <View 
	        android:layout_width="match_parent"
	        android:layout_height="2px"
	        android:background="#33ffffff"/>
        
        <LinearLayout 
            android:id="@+id/btn_message_area"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:background="@drawable/selector_btn_pressed_color_blue"
            android:gravity="center_vertical">
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="地区"
                android:textSize="16sp"
                android:textColor="#ffffff"/>
            
            <TextView
                android:id="@+id/tv_message_area"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
				android:layout_weight="1"
				android:gravity="right"
				android:layout_marginLeft="20dp"
				android:paddingRight="10dp"
				android:singleLine="true"
                android:text="无"
                android:textColor="#ffffff"/>
            
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/right_arrow"/>
            
        </LinearLayout>
        
        <View 
	        android:layout_width="match_parent"
	        android:layout_height="2px"
	        android:background="#33ffffff"/>
        
        <LinearLayout 
            android:id="@+id/btn_message_sex"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:background="@drawable/selector_btn_pressed_color_blue"
            android:gravity="center_vertical">
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="性别"
                android:textSize="16sp"
                android:textColor="#ffffff"/>
            
            <TextView
                android:id="@+id/tv_message_sex"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
				android:layout_weight="1"
				android:gravity="right"
				android:paddingRight="10dp"
                android:text="男"
                android:textColor="#ffffff"/>
            
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/right_arrow"/>
            
        </LinearLayout>
        
        <View 
	        android:layout_width="match_parent"
	        android:layout_height="2px"
	        android:background="#33ffffff"/>
        
        <LinearLayout 
            android:id="@+id/btn_message_signature"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:background="@drawable/selector_btn_pressed_color_blue"
            android:gravity="center_vertical">
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="个性签名"
                android:textSize="16sp"
                android:textColor="#ffffff"/>
            
            <TextView
                android:id="@+id/tv_message_description"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
				android:layout_weight="1"
				android:layout_marginLeft="20dp"
				android:singleLine="true"
				android:gravity="right"
				android:paddingRight="10dp"
                android:text="无"
                android:textColor="#ffffff"/>
            
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/right_arrow"/>
            
        </LinearLayout>
        
        <View 
	        android:layout_width="match_parent"
	        android:layout_height="2px"
	        android:background="#33ffffff"/>
        
    </LinearLayout>

</LinearLayout>
