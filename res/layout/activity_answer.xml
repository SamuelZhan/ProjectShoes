<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/answer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="@drawable/wallpaper_default1">
    
	<TextView
        android:id="@+id/answer_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:text="老婆"
        android:textSize="25sp"
        android:textColor="#ffffff"/>
    
    <TextView
        android:id="@+id/answer_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/answer_name"
        android:layout_marginTop="5dp"
        android:layout_centerHorizontal="true"
        android:text="15019261394"
        android:textSize="15sp"
        android:textColor="#ffffff"/>
    
    
    
    <Chronometer 
        android:id="@+id/answer_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/answer_phone"
        android:layout_marginTop="5dp"
        android:layout_centerHorizontal="true"
        android:format="%s"
        android:textSize="15sp"
        android:textColor="#ffffff"/>
    
    <LinearLayout
        android:id="@+id/layout_answer_row1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="40dp"
        android:layout_below="@id/answer_time"
        android:orientation="horizontal">
        
        <LinearLayout 
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/answer_mute_icon"/>
            
            <TextView
	            android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:gravity="center"
				android:layout_margin="10dp"
				android:text="静音"      
				android:textColor="#ffffff"/>
            
        </LinearLayout>
        
        
        
        <LinearLayout 
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/answer_keyboard_icon"/>
            
            <TextView
	            android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:gravity="center"
				android:layout_margin="10dp"
				android:text="拨号键盘"      
				android:textColor="#ffffff"/>
            
        </LinearLayout>
        
        <LinearLayout 
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/answer_hands_free_icon"/>
            
            <TextView
	            android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:gravity="center"
				android:layout_margin="10dp"
				android:text="免提"      
				android:textColor="#ffffff"/>
            
        </LinearLayout>
			  
    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/layout_answer_row2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_below="@id/layout_answer_row1"
        android:orientation="horizontal">
        
        
        <LinearLayout 
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/answer_add_call_icon"/>
            
            <TextView
	            android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:gravity="center"
				android:layout_margin="10dp"
				android:text="添加通话"      
				android:textColor="#ffffff"/>
            
        </LinearLayout>
        
        <LinearLayout 
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/answer_facetime_icon"/>
            
            <TextView
	            android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:gravity="center"
				android:layout_margin="10dp"
				android:text="FaceTime"      
				android:textColor="#ffffff"/>
            
        </LinearLayout>
        
        <LinearLayout 
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/answer_contacters_icon"/>
            
            <TextView
	            android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:gravity="center"
				android:layout_margin="10dp"
				android:text="通讯录"      
				android:textColor="#ffffff"/>
            
        </LinearLayout>
			  
    </LinearLayout>
    
    <ImageView
        android:id="@+id/answer_refuse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/layout_answer_row2"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:src="@drawable/refuse_icon"/>
    
</RelativeLayout>
