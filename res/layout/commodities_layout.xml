<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <LinearLayout
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:orientation="vertical">
         
         <RelativeLayout 
             android:layout_width="match_parent"
             android:layout_height="160dp"
             android:layout_marginTop="10dp"
             android:background="#33ffffff">
            
             <android.support.v4.view.ViewPager
		        android:id="@+id/advertisement_pager"
		        android:layout_width="match_parent"
		        android:layout_height="match_parent"
		        android:focusable="true"/>
             
             <LinearLayout 
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_alignParentBottom="true"
                 android:layout_alignParentRight="true"
                 android:layout_marginBottom="10dp"
                 android:layout_marginRight="15dp"
                 android:gravity="right"
                 android:orientation="horizontal">
                 
                 <ImageView 
                     android:id="@+id/point_1"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:paddingLeft="5dp"
                     android:paddingRight="5dp"
                     android:src="@drawable/shape_circle_fill"/>
                 
                 <ImageView 
                     android:id="@+id/point_2"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:paddingLeft="5dp"
                     android:paddingRight="5dp"
                     android:src="@drawable/shape_circle_stroke"/>
                 
                 <ImageView 
                     android:id="@+id/point_3"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:paddingLeft="5dp"
                     android:paddingRight="5dp"
                     android:src="@drawable/shape_circle_stroke"/>
             </LinearLayout>
           
         </RelativeLayout>                   
         
         <GridLayout 
             android:id="@+id/commodities_layout"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="horizontal"
             android:layout_marginTop="25dp"
             android:columnCount="2">
           
         </GridLayout>
         
     </LinearLayout>
</LinearLayout>
