<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res/com.example.shoes"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:orientation="vertical">
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp">
               
        <TextView 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="我的"
            android:textSize="20sp"
            android:textColor="#ffffff"/>
        
    </RelativeLayout>
    
    <View 
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="#33ffffff"/>
    
    <ScrollView 
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
       
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:orientation="vertical">
            
            <com.shoes.customview.RoundCornerImageView 
                android:id="@+id/mine_message"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:src="@drawable/head_image_default"
                custom:type="round"
                custom:cornerRadius="20dp"/>

            <TextView
                android:id="@+id/mine_nickname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="喵了个咪"
                android:textSize="15sp"
                android:textColor="#ffffff"/>
            
            <TextView
                android:id="@+id/mine_user_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="5dp"
                android:text="会员ID：12456"
                android:textSize="16sp"
                android:textColor="#ffffff"/>
            
            <View 
		        android:layout_width="match_parent"
		        android:layout_height="2px"
		        android:background="#33ffffff"/>
            
            <TextView
                android:id="@+id/mine_connection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:background="@drawable/selector_btn_pressed_color_blue"
                android:text="设备连接"
                android:textSize="18sp"
                android:textColor="#ffffff"/>
            
            <View 
		        android:layout_width="match_parent"
		        android:layout_height="2px"
		        android:background="#33ffffff"/>
            
            <TextView
                android:id="@+id/mine_clear_cache"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:background="@drawable/selector_btn_pressed_color_blue"
                android:text="清除缓存"
                android:textSize="18sp"
                android:textColor="#ffffff"/>
            
            <View 
		        android:layout_width="match_parent"
		        android:layout_height="2px"
		        android:background="#33ffffff"/>
            
            <TextView
                android:id="@+id/mine_hero"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:background="@drawable/selector_btn_pressed_color_blue"
                android:text="创客英雄"
                android:textSize="18sp"
                android:textColor="#ffffff"/>
            
            <View 
		        android:layout_width="match_parent"
		        android:layout_height="2px"
		        android:background="#33ffffff"/>
            
            <TextView
                 android:id="@+id/mine_tutorial"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:background="@drawable/selector_btn_pressed_color_blue"
                android:text="使用教程"
                android:textSize="18sp"
                android:textColor="#ffffff"/>
            
            <View 
		        android:layout_width="match_parent"
		        android:layout_height="2px"
		        android:background="#33ffffff"/>
            
            <LinearLayout
                android:id="@+id/mine_about_us"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:background="@drawable/selector_btn_pressed_color_blue"
                android:orientation="horizontal">
                
                <TextView
	               android:layout_width="0dp"
	               android:layout_height="wrap_content"
	               android:layout_weight="1"	              
	               android:text="版本更新"
	               android:textSize="18sp"
	               android:textColor="#ffffff"/>
                
                <TextView
	               android:layout_width="wrap_content"
	               android:layout_height="wrap_content"
	               android:layout_gravity="center_vertical"
	               android:text="当前版本1.1.1"
	               android:textSize="12sp"
	               android:textColor="#ffffff"/>
                
            </LinearLayout>
            
            
            <View 
		        android:layout_width="match_parent"
		        android:layout_height="2px"
		        android:background="#33ffffff"/>
            
            <TextView
                android:id="@+id/mine_reset_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:background="@drawable/selector_btn_pressed_color_blue"
                android:text="重置密码"
                android:textSize="18sp"
                android:textColor="#ffffff"/>
            
            <View 
		        android:layout_width="match_parent"
		        android:layout_height="2px"
		        android:background="#33ffffff"/>
            
            <TextView
                android:id="@+id/mine_logout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:background="@drawable/selector_btn_pressed_color_blue"
                android:text="退出登录"
                android:textSize="18sp"
                android:textColor="#ffffff"/>
            
            <View 
		        android:layout_width="match_parent"
		        android:layout_height="2px"
		        android:background="#33ffffff"/>
            
        </LinearLayout>
        
        
        
    </ScrollView>
    

</LinearLayout>