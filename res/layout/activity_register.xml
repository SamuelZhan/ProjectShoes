<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="@drawable/background">
    
    <ImageButton 
	    android:id="@+id/btn_back"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:paddingLeft="15dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingRight="20dp"
	    android:src="@drawable/back_bg"
	    android:background="@drawable/selector_btn_pressed_color_blue"
	    android:layout_alignParentLeft="true"/>
    
    <ImageView 
	    android:id="@+id/login_logo"
	    android:layout_width="160dp"
	    android:layout_height="160dp"
	    android:layout_below="@id/btn_back"
	    android:layout_centerHorizontal="true"
	    android:src="@drawable/logo"/>
    
    <LinearLayout
	    android:id="@+id/login_name_layout"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginLeft="50dp"
	    android:layout_marginRight="50dp"
	    android:padding="5dp"
	    android:gravity="center_vertical"
	    android:layout_below="@id/login_logo"
	    android:layout_marginTop="35dp"
	    android:background="@drawable/shape_login"
	    android:orientation="horizontal">
	    
	    <ImageView 
	        android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:paddingLeft="5dp"
	    	android:paddingRight="5dp"
	    	android:src="@drawable/login_name_icon"/>
	    
	    <View
	        android:layout_width="1px"
	        android:layout_height="match_parent"
	        android:layout_marginTop="3dp"
	        android:layout_marginBottom="3dp"
	        android:background="#ffffff"/>
	    
	    <EditText 
	        android:id="@+id/register_name"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:paddingLeft="5dp"
	        android:singleLine="true"
	        android:inputType="phone"
	        android:background="#00ffffff"
	        android:hint=" 手机号"
	        android:textColor="#ffffff"/>
	    
	</LinearLayout>
	
    <LinearLayout
	    android:id="@+id/login_pw_layout"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginLeft="50dp"
	    android:layout_marginRight="50dp"
	    android:padding="5dp"
	    android:gravity="center_vertical"
	    android:layout_below="@id/login_name_layout"
	    android:layout_marginTop="15dp"
	    android:background="@drawable/shape_login"
	    android:orientation="horizontal">
	    
	    <ImageView 
	        android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:paddingLeft="5dp"
	    	android:paddingRight="5dp"
	    	android:src="@drawable/login_pw_icon"/>
	    
	    <View
	        android:layout_width="1px"
	        android:layout_height="match_parent"
	        android:layout_marginTop="3dp"
	        android:layout_marginBottom="3dp"
	        android:background="#ffffff"/>
	    
	    <EditText 
	        android:id="@+id/register_pw"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:paddingLeft="5dp"
	        android:singleLine="true"
	        android:password="true"
	        android:background="#00ffffff"
	        android:hint=" 输入密码"
	        android:textColor="#ffffff"/>
	    
	</LinearLayout>
	
    <LinearLayout
	    android:id="@+id/login_ensure_pw_layout"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginLeft="50dp"
	    android:layout_marginRight="50dp"
	    android:padding="5dp"
	    android:gravity="center_vertical"
	    android:layout_below="@id/login_pw_layout"
	    android:layout_marginTop="15dp"
	    android:background="@drawable/shape_login"
	    android:orientation="horizontal">
	    
	    <ImageView 
	        android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:paddingLeft="5dp"
	    	android:paddingRight="5dp"
	    	android:src="@drawable/register_ensure_pw_icon"/>
	    
	    <View
	        android:layout_width="1px"
	        android:layout_height="match_parent"
	        android:layout_marginTop="3dp"
	        android:layout_marginBottom="3dp"
	        android:background="#ffffff"/>
	    
	    <EditText 
	        android:id="@+id/register_ensure_pw"
	        android:layout_width="0dp"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        android:paddingLeft="5dp"
	        android:singleLine="true"
	        android:password="true"
	        android:background="#00ffffff"
	        android:hint=" 确认密码"
	        android:textColor="#ffffff"/>
	    
	</LinearLayout>
	
    <LinearLayout
	    android:id="@+id/login_ensure_code_layout"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginLeft="50dp"
	    android:layout_marginRight="50dp"
	    android:gravity="center_vertical"
	    android:layout_below="@id/login_ensure_pw_layout"
	    android:layout_marginTop="15dp"
	    android:orientation="horizontal">
	    
        <LinearLayout
		    android:layout_width="0dp"
		    android:layout_height="wrap_content"
		    android:layout_weight="2"
		    android:padding="5dp"
		    android:layout_marginRight="5dp"
		    android:gravity="center_vertical"
		    android:background="@drawable/shape_login"
		    android:orientation="horizontal">
	    
		    <ImageView 
		        android:layout_width="wrap_content"
		    	android:layout_height="wrap_content"
		    	android:paddingLeft="5dp"
		    	android:paddingRight="5dp"
		    	android:src="@drawable/register_ensure_code_icon"/>
		    
		    <View
		        android:layout_width="1px"
		        android:layout_height="match_parent"
		        android:layout_marginTop="3dp"
		        android:layout_marginBottom="3dp"
		        android:background="#ffffff"/>
		    
		    <EditText 
		        android:id="@+id/register_verification_code"
		        android:layout_width="0dp"
		        android:layout_height="wrap_content"
		        android:layout_weight="1"
		        android:paddingLeft="5dp"
		        android:singleLine="true"		        
		        android:background="#00ffffff"
		        android:hint=" 验证码"
		        android:textColor="#ffffff"/>
	    
		</LinearLayout>
	    
	    <Button 
	        android:id="@+id/btn_get_verification_code"
	        android:layout_width="0dp"
	        android:layout_height="match_parent"
	        android:layout_weight="1"
	        android:background="@drawable/selector_login_btn"
	        android:textSize="15sp"
	        android:textColor="#000000"
	        android:text="获取验证码"/>
	    
	</LinearLayout>
	
    <CheckBox
        android:id="@+id/register_cb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="55dp"
        android:layout_below="@id/login_ensure_code_layout"
        android:checked="true"
        android:text="  我确认并同意《用户注册协议》"
        android:textSize="12sp"
        style="@style/register_cb_style"/>
    
    <Button
        android:id="@+id/btn_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/register_cb"
        android:layout_marginLeft="50dp"
	    android:layout_marginRight="50dp"
	    android:layout_marginTop="30dp"
	    android:padding="5dp"
	    android:background="@drawable/selector_virtual_call_btn"
	    android:text="注    册"
	    android:textColor="#ffffff"
	    android:textSize="18sp"/>
	
    

</RelativeLayout>
