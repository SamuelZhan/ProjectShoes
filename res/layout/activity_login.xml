<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="@drawable/background">
    
    <ScrollView 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">        
        <RelativeLayout
            android:layout_width="match_parent"
   			android:layout_height="wrap_content">
			<Button 
			    android:id="@+id/btn_slip"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:padding="10dp"
			    android:background="@drawable/selector_btn_pressed_color_blue"
			    android:layout_alignParentRight="true"
			    android:text="跳过"
			    android:textSize="16sp"
			    android:textColor="#ffffff"/>
			
			<ImageView 
			    android:id="@+id/login_logo"
			    android:layout_width="160dp"
        		android:layout_height="160dp"
			    android:layout_below="@id/btn_slip"
			    android:layout_centerHorizontal="true"
			    android:src="@drawable/logo"/>
			
			<LinearLayout
			    android:id="@+id/login_name_layout"
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:layout_marginLeft="50dp"
			    android:layout_marginRight="50dp"
			    android:padding="5dp"
			    android:gravity="center_vertical"
			    android:layout_below="@id/login_logo"
			    android:layout_marginTop="35dp"
			    android:background="@drawable/shape_login"
			    android:orientation="horizontal">
			    
			    <ImageView 
			        android:layout_width="wrap_content"
			    	android:layout_height="wrap_content"
			    	android:paddingLeft="5dp"
			    	android:paddingRight="5dp"
			    	android:src="@drawable/login_name_icon"/>
			    
			    <View
			        android:layout_width="1px"
			        android:layout_height="match_parent"
			        android:layout_marginTop="3dp"
			        android:layout_marginBottom="3dp"
			        android:background="#ffffff"/>
			    
			    <EditText 
			        android:id="@+id/login_name"
			        android:layout_width="0dp"
			        android:layout_height="wrap_content"
			        android:layout_weight="1"
			        android:paddingLeft="5dp"
			        android:background="#00ffffff"
			        android:hint=" 请输入账号"
			        android:textColor="#ffffff"/>
			    
			</LinearLayout>
			
			<LinearLayout
			    android:id="@+id/login_pw_layout"
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:layout_marginLeft="50dp"
			    android:layout_marginRight="50dp"
			    android:padding="5dp"
			    android:gravity="center_vertical"
			    android:layout_below="@id/login_name_layout"
			    android:layout_marginTop="15dp"
			    android:background="@drawable/shape_login"
			    android:orientation="horizontal">
			    
			    <ImageView 
			        android:layout_width="wrap_content"
			    	android:layout_height="wrap_content"
			    	android:paddingLeft="5dp"
			    	android:paddingRight="5dp"
			    	android:src="@drawable/login_pw_icon"/>
			    
			    <View
			        android:layout_width="1px"
			        android:layout_height="match_parent"
			        android:layout_marginTop="3dp"
			        android:layout_marginBottom="3dp"
			        android:background="#ffffff"/>
			    
			    <EditText 
			        android:id="@+id/login_pw"
			        android:layout_width="0dp"
			        android:layout_height="wrap_content"
			        android:layout_weight="1"
			        android:paddingLeft="5dp"
			        android:background="#00ffffff"
			        android:hint=" 请输入密码"
			        android:password="true"
			        android:textColor="#ffffff"/>
			    
			</LinearLayout>
			
			<CheckBox 
			    android:id="@+id/remember_pw"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_alignParentLeft="true"
			    android:layout_below="@id/login_pw_layout"
			    android:layout_marginLeft="55dp"
			    android:layout_marginTop="8dp"
			    android:padding="5dp"
			    android:text="记住密码"
		        android:textSize="14sp"
		        android:textColor="#ffffff"
		        style="@style/register_cb_style"/>
			
			<TextView
			    android:id="@+id/forget_pw"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_alignParentRight="true"
			    android:layout_below="@id/login_pw_layout"
			    android:layout_marginRight="50dp"
			    android:layout_marginTop="8dp"
			    android:padding="5dp"
			    android:background="@drawable/selector_btn_pressed_color_blue"
			    android:text="忘记密码？"
			    android:textColor="#ffffff"/>
			
			<RelativeLayout
			    android:id="@+id/login_register_layout"
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:layout_marginLeft="50dp"
			    android:layout_marginRight="50dp"
			    android:layout_marginTop="25dp"
			    android:gravity="center_vertical"
			    android:layout_below="@id/forget_pw">
			    
			    <Button 
			        android:id="@+id/btn_register"
			        android:layout_width="wrap_content"
			        android:layout_height="36dp"
			        android:layout_alignParentLeft="true"
			        android:paddingTop="5dp"
			        android:paddingBottom="5dp"
			        android:paddingLeft="40dp"
			        android:paddingRight="40dp"
			        android:background="@drawable/selector_virtual_call_btn"
			        android:gravity="center"
			        android:text="注  册"
			        android:textSize="18sp"
			        android:textColor="#ffffff"/>
			    
			    <Button
			        android:id="@+id/btn_login"
			        android:layout_width="wrap_content"
			        android:layout_height="36dp"
			        android:layout_alignParentRight="true"
			        android:paddingTop="5dp"
			        android:paddingBottom="5dp"
			        android:paddingLeft="40dp"
			        android:paddingRight="40dp"
			        android:background="@drawable/selector_login_btn"
			        android:gravity="center"
			        android:text="登  录"
			        android:textSize="18sp"
			        android:textColor="#000000"/>
			    
			</RelativeLayout>
			
			
			<TextView
			    android:id="@+id/other_login"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_marginTop="25dp"
			    android:layout_centerHorizontal="true"
			    android:layout_below="@id/login_register_layout"
			    android:text="其他登录方式"
			    android:textColor="#ffffff"/>
			
			<RelativeLayout
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:layout_marginLeft="60dp"
			    android:layout_marginRight="60dp"
			    android:layout_marginTop="20dp"
			    android:gravity="center_vertical"
			    android:layout_below="@id/other_login">
			    
			    <ImageButton 
			        android:id="@+id/btn_qq_login"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_alignParentLeft="true"
			        android:background="@drawable/qq_login"/>
			    <ImageButton 
			        android:id="@+id/btn_weixin_login"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_centerHorizontal="true"
			        android:background="@drawable/wx_login"/>
			    <ImageButton 
			        android:id="@+id/btn_weibo_login"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_alignParentRight="true"
			        android:background="@drawable/weibo_login"/>
			    
			   </RelativeLayout>
        </RelativeLayout>
       
    </ScrollView>	
</RelativeLayout>
