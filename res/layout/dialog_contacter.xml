<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
	<RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:gravity="center">
        
        <TextView
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:text="来电联系人"
		    android:textSize="18sp"/>
        
    </RelativeLayout>
	
	<View 
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="#E4E4E4"/>
	
	<RadioGroup
        android:id="@+id/contacter_radiogroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp">
        
        <RadioButton
            android:id="@+id/contacter_item1"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:button="@null"
            android:text="通讯录随机抽取"
            android:drawableRight="@drawable/selector_virtual_call_dialog"/>
        
        <View 
	        android:layout_width="match_parent"
	        android:layout_height="2px"
	        android:background="#E4E4E4"/>
        
        <RadioButton
            android:id="@+id/contacter_item2"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:button="@null"
            android:text="从通讯录中选择"
            android:drawableRight="@drawable/selector_virtual_call_dialog"/>
        
        <View 
	        android:layout_width="match_parent"
	        android:layout_height="2px"
	        android:background="#E4E4E4"/>
        
        <RadioButton
            android:id="@+id/contacter_item3"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:button="@null"
            android:text="自定义联系人"
            android:drawableRight="@drawable/selector_virtual_call_dialog"/>
        
    </RadioGroup>
     
	<LinearLayout
	    android:id="@+id/dialog_contacter_input"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:layout_marginLeft="30dp"
	    android:layout_marginRight="30dp"
	    android:orientation="vertical"
	    android:visibility="gone">
	    
	    <View 
	        android:layout_width="match_parent"
	        android:layout_height="2px"        
	        android:background="#E4E4E4"/>
	    
	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="35dp"
	        android:gravity="center_vertical"
	        android:orientation="horizontal">
	        
	        <TextView 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginRight="8dp"	            
	            android:text="姓名"
	            android:textSize="16sp"/>
	        
	        <EditText 
	            android:id="@+id/custom_input_name"
	            android:layout_width="0dp"
	            android:layout_height="wrap_content"
	            android:layout_weight="1"
	            android:singleLine="true"
	            android:layout_marginRight="10dp"
	            android:paddingLeft="5dp"
	            android:background="@drawable/shape_custom_input"/>
	        
	    </LinearLayout>
	    
	    <View 
	        android:layout_width="match_parent"
	        android:layout_height="2px"        
	        android:background="#E4E4E4"/>
	    
	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="35dp"
	        android:gravity="center_vertical"
	        android:orientation="horizontal">
	        
	        <TextView 
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginRight="8dp"	            
	            android:text="电话"
	            android:textSize="16sp"/>
	        
	        <EditText 
	            android:id="@+id/custom_input_phone"
	            android:layout_width="0dp"
	            android:layout_height="wrap_content"
	            android:layout_weight="1"
	            android:singleLine="true"
	            android:numeric="integer"
	            android:layout_marginRight="10dp"
	            android:paddingLeft="5dp"
	            android:background="@drawable/shape_custom_input"/>
	        
	    </LinearLayout>
	    
	    
	</LinearLayout>
	    
	
</LinearLayout>
